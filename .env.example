# ============================================
# ALX Partnership App - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"

# ============================================
# NEXTAUTH (Authentication)
# ============================================
# Generate secret: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# ============================================
# GOOGLE OAUTH
# ============================================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_AUTHORIZED_DOMAIN="alxafrica.com"  # Only allow @alxafrica.com emails

# ============================================
# EMAIL / SMTP
# ============================================
EMAIL_PROVIDER="resend"
RESEND_API_KEY="re_xxxxxxxxxxxx"
EMAIL_FROM="ALX Partnership <partnerships@yourdomain.com>"
EMAIL_ADMIN_CC="admin@alxafrica.com"

# ============================================
# FILE STORAGE (S3 Compatible)
# ============================================
STORAGE_PROVIDER="r2"
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key"
R2_SECRET_ACCESS_KEY="your-r2-secret-key"
R2_BUCKET_NAME="alx-partnership-files"
R2_PUBLIC_URL="https://pub-xxxxx.r2.dev"

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_URL="http://localhost:3000"
NODE_ENV="development"  # development | production

# Business Rules
BUSINESS_DAYS_ADVANCE=15  # Minimum days before event
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_TYPES="application/pdf,image/png,image/jpeg"

# Rate Limiting
RATE_LIMIT_SUBMISSIONS_PER_HOUR=5
RATE_LIMIT_WINDOW_MINUTES=60

# ============================================
# MONITORING (Optional)
# ============================================
SENTRY_DSN=""  # Error tracking
ANALYTICS_ID=""  # Google Analytics, etc.

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
ENABLE_GOOGLE_CALENDAR_SYNC="false"
ENABLE_MALWARE_SCANNING="false"  # Requires ClamAV or similar
MAINTENANCE_MODE="false"
