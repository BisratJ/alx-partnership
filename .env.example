# ============================================
# ALX Partnership App - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://username:password@localhost:5432/alx_partnership?schema=public"

# ============================================
# NEXTAUTH (Authentication)
# ============================================
# Generate secret: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-here-minimum-32-characters-long"

# ============================================
# GOOGLE OAUTH
# ============================================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_AUTHORIZED_DOMAIN="alxafrica.com"  # Only allow @alxafrica.com emails

# ============================================
# EMAIL / SMTP
# ============================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"  # true for port 465, false for other ports
SMTP_USER="notifications@alxafrica.com"
SMTP_PASSWORD="your-smtp-app-password"
EMAIL_FROM="ALX Partnership <partnerships@alxafrica.com>"
EMAIL_ADMIN_CC="ops@alxafrica.com"  # CC for all submissions

# ============================================
# FILE STORAGE (S3 Compatible)
# ============================================
S3_ENDPOINT="https://s3.amazonaws.com"
S3_REGION="us-east-1"
S3_BUCKET="alx-partnership-files"
S3_ACCESS_KEY_ID="your-access-key-id"
S3_SECRET_ACCESS_KEY="your-secret-access-key"
S3_PUBLIC_URL="https://your-bucket.s3.amazonaws.com"  # For serving files

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_URL="http://localhost:3000"
NODE_ENV="development"  # development | production

# Business Rules
BUSINESS_DAYS_ADVANCE=15  # Minimum days before event
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_TYPES="application/pdf,image/png,image/jpeg"

# Rate Limiting
RATE_LIMIT_SUBMISSIONS_PER_HOUR=5
RATE_LIMIT_WINDOW_MINUTES=60

# ============================================
# MONITORING (Optional)
# ============================================
SENTRY_DSN=""  # Error tracking
ANALYTICS_ID=""  # Google Analytics, etc.

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
ENABLE_GOOGLE_CALENDAR_SYNC="false"
ENABLE_MALWARE_SCANNING="false"  # Requires ClamAV or similar
MAINTENANCE_MODE="false"
